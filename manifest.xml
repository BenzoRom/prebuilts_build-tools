<?xml version='1.0' encoding='UTF-8'?>
<manifest>

  <!-- remotes -->
  <remote  name="github"
           fetch="https://github.com" />
  <remote  name="benzo"
           fetch="https://github.com/BenzoRom/"
           revision="eightone"/>
  <remote  name="bb"
           fetch="https://bitbucket.org/xanaxdroid/" />
  <remote  name="aosp"
           fetch="https://android.googlesource.com"
           review="android-review.googlesource.com" />
  <default revision="refs/tags/android-8.1.0_r20"
           remote="aosp"
           sync-c="true"
           sync-j="4" />

  <!-- build projects -->
  <project name="build" path="build/make" remote="benzo" >
    <linkfile dest="build/tools" src="tools" />
  </project>
  <project name="platform/build/blueprint" path="build/blueprint" />
  <project name="build_kati" path="build/kati" remote="benzo" />
  <project name="build_soong" path="build/soong" remote="benzo">
    <linkfile dest="Android.bp" src="root.bp" />
    <linkfile dest="bootstrap.bash" src="bootstrap.bash" />
  </project>
  <project clone-depth="1" name="platform/prebuilts/build-tools" path="prebuilts/build-tools" />

  <!-- toolchain linux prebuilts -->
  <project clone-depth="1" groups="linux" name="platform/prebuilts/clang/host/linux-x86" path="prebuilts/clang/host/linux-x86"/>
  <project clone-depth="1" groups="linux" name="dragontc-7.0" path="prebuilts/clang/host/linux-x86/7.0" remote="bb" revision="dragontc" />
  <project clone-depth="1" name="platform/prebuilts/gcc/linux-x86/host/x86_64-linux-glibc2.15-4.8" path="prebuilts/gcc/linux-x86/host/x86_64-linux-glibc2.15-4.8" />
  <project clone-depth="1" groups="linux" name="platform/prebuilts/go/linux-x86" path="prebuilts/go/linux-x86" />
  <project clone-depth="1" groups="linux" name="platform/prebuilts/ninja/linux-x86" path="prebuilts/ninja/linux-x86" revision="master" />

  <!-- toolchain darwin prebuilts -->
  <project clone-depth="1" groups="darwin" name="platform/prebuilts/clang/host/darwin-x86" path="prebuilts/clang/host/darwin-x86" />
  <project clone-depth="1" groups="darwin" name="platform/prebuilts/gcc/darwin-x86/host/headers" path="prebuilts/gcc/darwin-x86/host/headers" revision="master" />
  <project clone-depth="1" groups="darwin" name="platform/prebuilts/gcc/darwin-x86/host/i686-apple-darwin-4.2.1" path="prebuilts/gcc/darwin-x86/host/i686-apple-darwin-4.2.1" />
  <project clone-depth="1" groups="darwin" name="platform/prebuilts/go/darwin-x86" path="prebuilts/go/darwin-x86"  />
  <project clone-depth="1" groups="darwin" name="platform/prebuilts/ninja/darwin-x86" path="prebuilts/ninja/darwin-x86" revision="master" />

  <!-- toolchain windows prebuilts -->
  <project clone-depth="1" groups="linux" name="platform/prebuilts/clang/host/windows-x86" path="prebuilts/clang/host/windows-x86" revision="master" />
  <project clone-depth="1" groups="linux" name="platform/prebuilts/gcc/linux-x86/host/x86_64-w64-mingw32-4.8" path="prebuilts/gcc/linux-x86/host/x86_64-w64-mingw32-4.8" />

  <!-- dependency source -->
  <project name="platform/development" path="development" />
  <project name="platform/external/clang" path="external/clang" />
  <project name="platform/external/compiler-rt" path="external/compiler-rt" />
  <project name="platform/external/libcxx" path="external/libcxx" />
  <project name="platform/external/libcxxabi" path="external/libcxxabi" />
  <project name="platform/external/libunwind" path="external/libunwind" />
  <project name="platform/external/libunwind_llvm" path="external/libunwind_llvm" />
  <project name="platform/external/llvm" path="external/llvm" />
  <project name="platform/external/protobuf" path="external/protobuf" />
  <project name="platform/external/zlib" path="external/zlib" />

  <!-- target projects -->
  <project name="toolchain/go" path="toolchain/go" revision="master" />
  <project name="mydongistiny/ninja" path="external/ninja" remote="github" revision="master" />

</manifest>
